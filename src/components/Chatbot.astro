---

<!-- Chatbot Widget -->
<div id="chatbot-widget" class="fixed bottom-6 right-6 z-50">
  <!-- Chat Button -->
  <button
    id="chatbot-toggle"
    class="w-16 h-16 bg-gradient-to-br from-[#F8B92F] to-[#FFD700] rounded-full shadow-2xl shadow-[#F8B92F]/50 flex items-center justify-center hover:scale-110 transition-transform duration-300 group"
    aria-label="Open Chat"
  >
    <svg class="w-8 h-8 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
    </svg>
    <div class="absolute -top-1 -right-1 w-4 h-4 bg-green-400 rounded-full animate-pulse"></div>
  </button>

  <!-- Chat Window -->
  <div
    id="chatbot-window"
    class="hidden fixed bottom-24 right-6 w-[90vw] sm:w-96 max-h-[70vh] sm:max-h-[600px] glass-dark rounded-2xl shadow-2xl flex-col overflow-hidden border border-[#F8B92F]/20"
  >
    <!-- Header -->
    <div class="bg-gradient-to-r from-[#F8B92F] to-[#FFD700] p-4 flex items-center justify-between">
      <div class="flex items-center space-x-3">
        <div class="w-10 h-10 bg-black rounded-full flex items-center justify-center">
          <span class="text-[#F8B92F] font-bold text-lg">MG</span>
        </div>
        <div>
          <h3 class="font-bold text-black text-lg">MDGH Assistant</h3>
          <p class="text-black/70 text-sm flex items-center">
            <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
            Online now
          </p>
        </div>
      </div>
      <button
        id="chatbot-close"
        class="text-black hover:bg-black/10 rounded-full p-2 transition-colors"
        aria-label="Close Chat"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- API Key Setup (shown first time) -->
    <div id="api-key-setup" class="flex-1 p-6 flex flex-col items-center justify-center space-y-4">
      <div class="text-center space-y-3">
        <div class="w-16 h-16 bg-gradient-to-br from-[#F8B92F] to-[#FFD700] rounded-full mx-auto flex items-center justify-center">
          <svg class="w-8 h-8 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
          </svg>
        </div>
        <h4 class="text-xl font-bold text-white">Setup AI Chat</h4>
        <p class="text-white/70 text-sm">
          Enter your OpenRouter API key to chat with our AI assistant.
          <a href="https://openrouter.ai/keys" target="_blank" class="text-[#F8B92F] hover:underline">
            Get a free key â†’
          </a>
        </p>
      </div>
      <div class="w-full space-y-3">
        <input
          type="password"
          id="api-key-input"
          placeholder="Enter your OpenRouter API key"
          class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:border-[#F8B92F]"
        />
        <button
          id="save-api-key"
          class="w-full px-6 py-3 bg-gradient-to-r from-[#F8B92F] to-[#FFD700] text-black font-semibold rounded-lg hover:shadow-lg transition-all"
        >
          Start Chatting
        </button>
      </div>
      <p class="text-white/50 text-xs text-center">
        Your API key is stored locally and never sent to our servers.
      </p>
    </div>

    <!-- Messages -->
    <div id="chatbot-messages" class="hidden flex-1 overflow-y-auto p-4 space-y-4 hide-scrollbar">
      <!-- Welcome message -->
      <div class="flex items-start space-x-2">
        <div class="w-8 h-8 bg-gradient-to-br from-[#F8B92F] to-[#FFD700] rounded-full flex items-center justify-center flex-shrink-0">
          <span class="text-black font-bold text-sm">MG</span>
        </div>
        <div class="glass rounded-2xl rounded-tl-none p-3 max-w-[80%]">
          <p class="text-white/90 text-sm">
            Hello! ðŸ‘‹ Welcome to Miss Diaspora Ghana. I'm your AI assistant, here to help you learn about our pageant. Ask me anything about MDGH, sponsorship opportunities, or how to apply!
          </p>
        </div>
      </div>
    </div>

    <!-- Input -->
    <div id="chatbot-input-area" class="hidden p-4 border-t border-white/10">
      <div class="flex items-end space-x-2">
        <input
          type="text"
          id="chatbot-input"
          placeholder="Ask me anything..."
          class="flex-1 px-4 py-3 bg-white/10 border border-white/20 rounded-2xl text-white placeholder-white/50 focus:outline-none focus:border-[#F8B92F] resize-none"
        />
        <button
          id="chatbot-send"
          class="w-12 h-12 bg-gradient-to-br from-[#F8B92F] to-[#FFD700] rounded-full flex items-center justify-center hover:scale-110 transition-transform flex-shrink-0"
          aria-label="Send"
        >
          <svg class="w-5 h-5 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  const toggle = document.getElementById('chatbot-toggle');
  const window = document.getElementById('chatbot-window');
  const close = document.getElementById('chatbot-close');
  const apiKeySetup = document.getElementById('api-key-setup');
  const apiKeyInput = document.getElementById('api-key-input') as HTMLInputElement;
  const saveApiKey = document.getElementById('save-api-key');
  const messages = document.getElementById('chatbot-messages');
  const inputArea = document.getElementById('chatbot-input-area');
  const input = document.getElementById('chatbot-input') as HTMLInputElement;
  const send = document.getElementById('chatbot-send');

  let isOpen = false;

  // API key is handled server-side, skip setup
  apiKeySetup?.classList.add('hidden');
  messages?.classList.remove('hidden');
  inputArea?.classList.remove('hidden');

  // Toggle chat
  toggle?.addEventListener('click', () => {
    isOpen = !isOpen;
    if (isOpen) {
      window?.classList.remove('hidden');
      window?.classList.add('flex');
    } else {
      window?.classList.add('hidden');
      window?.classList.remove('flex');
    }
  });

  close?.addEventListener('click', () => {
    isOpen = false;
    window?.classList.add('hidden');
    window?.classList.remove('flex');
  });

  // Save API key
  saveApiKey?.addEventListener('click', () => {
    const key = apiKeyInput?.value.trim();
    if (key) {
      apiKey = key;
      localStorage.setItem('openrouter_api_key', key);
      apiKeySetup?.classList.add('hidden');
      messages?.classList.remove('hidden');
      inputArea?.classList.remove('hidden');
    }
  });

  // Send message
  async function sendMessage() {
    const message = input?.value.trim();
    if (!message) return;

    // Add user message
    addMessage(message, 'user');
    input!.value = '';

    // Show typing indicator
    const typingId = addTypingIndicator();

    try {
      const response = await fetch('/api/chat', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ message }),
      });

      const data = await response.json();

      // Remove typing indicator
      removeTypingIndicator(typingId);

      if (data.error) {
        // Show actual error details for debugging
        const errorMsg = data.details ? `Error: ${data.details}` : data.error;
        addMessage(errorMsg, 'bot');
      } else {
        addMessage(data.response, 'bot');
      }
    } catch (error) {
      removeTypingIndicator(typingId);
      addMessage(`Connection error: ${error.message}`, 'bot');
    }
  }

  send?.addEventListener('click', sendMessage);
  input?.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') sendMessage();
  });

  function addMessage(text: string, sender: 'user' | 'bot') {
    const messageDiv = document.createElement('div');
    messageDiv.className = `flex items-start space-x-2 ${sender === 'user' ? 'flex-row-reverse space-x-reverse' : ''}`;

    const avatar = document.createElement('div');
    avatar.className = `w-8 h-8 ${sender === 'bot' ? 'bg-gradient-to-br from-[#F8B92F] to-[#FFD700]' : 'bg-white/20'} rounded-full flex items-center justify-center flex-shrink-0`;
    avatar.innerHTML = `<span class="${sender === 'bot' ? 'text-black' : 'text-white'} font-bold text-sm">${sender === 'bot' ? 'MG' : 'You'}</span>`;

    const bubble = document.createElement('div');
    bubble.className = `${sender === 'bot' ? 'glass rounded-2xl rounded-tl-none' : 'bg-gradient-to-br from-[#F8B92F] to-[#FFD700] rounded-2xl rounded-tr-none'} p-3 max-w-[80%]`;
    bubble.innerHTML = `<p class="${sender === 'bot' ? 'text-white/90' : 'text-black'} text-sm whitespace-pre-wrap">${text}</p>`;

    messageDiv.appendChild(avatar);
    messageDiv.appendChild(bubble);
    messages?.appendChild(messageDiv);
    messages!.scrollTop = messages!.scrollHeight;
  }

  function addTypingIndicator(): string {
    const id = 'typing-' + Date.now();
    const div = document.createElement('div');
    div.id = id;
    div.className = 'flex items-start space-x-2';
    div.innerHTML = `
      <div class="w-8 h-8 bg-gradient-to-br from-[#F8B92F] to-[#FFD700] rounded-full flex items-center justify-center">
        <span class="text-black font-bold text-sm">MG</span>
      </div>
      <div class="glass rounded-2xl rounded-tl-none p-3">
        <div class="flex space-x-1">
          <div class="w-2 h-2 bg-white/60 rounded-full animate-bounce" style="animation-delay: 0s"></div>
          <div class="w-2 h-2 bg-white/60 rounded-full animate-bounce" style="animation-delay: 0.2s"></div>
          <div class="w-2 h-2 bg-white/60 rounded-full animate-bounce" style="animation-delay: 0.4s"></div>
        </div>
      </div>
    `;
    messages?.appendChild(div);
    messages!.scrollTop = messages!.scrollHeight;
    return id;
  }

  function removeTypingIndicator(id: string) {
    document.getElementById(id)?.remove();
  }
</script>
