---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import Chatbot from '../components/Chatbot.astro';
import '../styles/global.css';
---

<Layout title="Miss Diaspora Ghana | Celebrating Beauty, Culture & Impact">
	<Navigation />
	<Hero />

	<!-- Pillars Section -->
	<section id="pillars" class="relative py-24 bg-black">
		<div class="container mx-auto px-6">
			<div class="grid md:grid-cols-3 gap-8">
				{[
					{
						icon: '/assets/images/content/culture.png',
						number: '01',
						title: 'Cultural Identity',
						description: 'Fostering a deep appreciation for African heritage among women of the diaspora through meaningful experiences.'
					},
					{
						icon: '/assets/images/content/leadership.png',
						number: '02',
						title: 'Leadership Training',
						description: 'Equipping young women with essential skills to thrive in their communities and beyond.'
					},
					{
						icon: '/assets/images/content/social impact.png',
						number: '03',
						title: 'Social Impact',
						description: 'Creating lasting change by empowering women to advocate for their communities and inspire future generations.'
					}
				].map((pillar) => (
					<div class="pillar-card group relative glass p-8 rounded-2xl hover:scale-105 transition-all duration-300 border border-[#F8B92F]/20">
						<div class="absolute top-6 right-6 text-6xl font-bold text-[#F8B92F]/10">{pillar.number}</div>
						<img src={pillar.icon} alt={pillar.title} class="w-20 h-20 mb-6 relative z-10" />
						<h3 class="text-2xl font-bold text-white mb-4 relative z-10">{pillar.title}</h3>
						<p class="text-white/70 relative z-10">{pillar.description}</p>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- About Section -->
	<section id="about" class="relative py-24 animated-gradient grid-pattern">
		<div class="container mx-auto px-6">
			<div class="grid lg:grid-cols-2 gap-16 items-center">
				<div class="about-image rounded-3xl overflow-hidden">
					<img
						src="/assets/images/content/a-medium-shot-of-a-confident-elegant-gha.jpg"
						alt="Miss Diaspora Ghana"
						class="w-full h-[600px] object-cover hover:scale-110 transition-transform duration-700"
					/>
				</div>
				<div class="space-y-6">
					<span class="text-[#F8B92F] uppercase tracking-wider text-sm font-semibold">About Us</span>
					<h2 class="text-5xl font-bold text-white leading-tight">About Miss Diaspora <span class="gradient-text">GH</span></h2>
					<p class="text-white/80 text-lg">
						Miss Diaspora Ghana (MDGH) is dedicated to celebrating the beauty and strength of women of African descent. Our mission empowers young leaders to connect with their roots and make a difference.
					</p>
					<p class="text-white/80 text-lg">
						Motivated by the rich heritage and cultural legacy of Ghana, we seek to bridge the gap between the diaspora and their homeland through leadership and empowerment.
					</p>
					<div class="grid grid-cols-2 gap-6 pt-6">
						<div class="glass p-6 rounded-xl">
							<span class="text-[#F8B92F] text-sm uppercase tracking-wide">Organization</span>
							<p class="text-white font-semibold mt-2">Nubian Crown Company Limited</p>
						</div>
						<div class="glass p-6 rounded-xl">
							<span class="text-[#F8B92F] text-sm uppercase tracking-wide">General Manager</span>
							<p class="text-white font-semibold mt-2">Yvonne Kofigah</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Objectives Section -->
	<section id="objectives" class="relative py-24 bg-black">
		<div class="container mx-auto px-6">
			<div class="text-center mb-16">
				<span class="text-[#F8B92F] uppercase tracking-wider text-sm font-semibold">Our Mission</span>
				<h2 class="text-5xl font-bold text-white mt-4 mb-6">Objectives</h2>
				<p class="text-white/70 text-lg max-w-3xl mx-auto">
					Miss Diaspora Ghana seeks to highlight the invaluable role that Africans abroad play in national development.
				</p>
			</div>
			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
				{[
					{ icon: 'ðŸŽ¯', title: 'Promote Cultural Identity', description: 'Celebrate and preserve Ghanaian heritage and traditions among diaspora communities.' },
					{ icon: 'ðŸ‘‘', title: 'Empower Young Women', description: 'Provide a platform for young women of African descent to showcase their talents and leadership.' },
					{ icon: 'ðŸŒ', title: 'Strengthen Diaspora Engagement', description: 'Foster meaningful connections between African communities abroad and their homeland.' },
					{ icon: 'âœˆï¸', title: 'Promote Tourism & Investment', description: 'Position Ghana as a vibrant destination for cultural tourism and global partnership.' },
					{ icon: 'ðŸ’š', title: 'Support Social Impact', description: 'Empower contestants to champion causes such as education and women\'s health.' },
					{ icon: 'ðŸ“¢', title: 'Create Brand Opportunities', description: 'Offer sponsors strong visibility and engagement across global audiences.' }
				].map((obj) => (
					<div class="objective-card glass p-6 rounded-2xl hover:border-[#F8B92F] border-2 border-transparent transition-all duration-300 group">
						<div class="text-5xl mb-4">{obj.icon}</div>
						<h3 class="text-xl font-bold text-white mb-3 group-hover:text-[#F8B92F] transition-colors">{obj.title}</h3>
						<p class="text-white/70">{obj.description}</p>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Programs Section -->
	<section id="programs" class="relative py-24 animated-gradient grid-pattern">
		<div class="container mx-auto px-6">
			<div class="text-center mb-16">
				<span class="text-[#F8B92F] uppercase tracking-wider text-sm font-semibold">Our Initiatives</span>
				<h2 class="text-5xl font-bold text-white mt-4 mb-6">Programs & Initiatives</h2>
				<p class="text-white/70 text-lg max-w-3xl mx-auto">
					Discover the impactful programs designed to uplift and empower women across the diaspora.
				</p>
			</div>
			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
				{[
					{ num: '01', title: 'Mentorship Program', description: 'Connects young women with experienced leaders to guide their journeys.' },
					{ num: '02', title: 'Cultural Workshops', description: 'Interactive workshops exploring Ghanaian traditions, arts, and languages.' },
					{ num: '03', title: 'Community Outreach', description: 'Active engagement in local communities through social impact initiatives.' },
					{ num: '04', title: 'Cultural Immersion Week', description: 'Finalists participate in cultural tours, community service, and mentorship.' },
					{ num: '05', title: 'Grand Finale Event', description: 'Professionally produced, televised finale with talent showcases and crowning.' },
					{ num: '06', title: 'Post-Event Ambassadorship', description: 'One-year ambassadorial role for the crowned queen and runners-up.' }
				].map((program) => (
					<div class="program-card glass-dark p-8 rounded-2xl hover:scale-105 transition-all duration-300 border border-white/10 relative overflow-hidden group">
						<div class="absolute top-4 right-4 text-7xl font-bold text-[#F8B92F]/10 group-hover:text-[#F8B92F]/20 transition-colors">{program.num}</div>
						<div class="w-12 h-1 bg-gradient-to-r from-[#F8B92F] to-[#FFD700] mb-6"></div>
						<h3 class="text-2xl font-bold text-white mb-4 relative z-10">{program.title}</h3>
						<p class="text-white/70 relative z-10">{program.description}</p>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Sponsorship Section -->
	<section id="sponsorship" class="relative py-24 bg-black">
		<div class="container mx-auto px-6">
			<div class="text-center mb-16">
				<span class="text-[#F8B92F] uppercase tracking-wider text-sm font-semibold">Partnership</span>
				<h2 class="text-5xl font-bold text-white mt-4 mb-6">Sponsorship Tiers</h2>
				<p class="text-white/70 text-lg max-w-3xl mx-auto">
					Join us in empowering young women and connecting the diaspora with Ghana.
				</p>
			</div>
			<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
				{[
					{ tier: 'Platinum', price: 'GHS 150,000+', color: 'from-yellow-400 to-yellow-600', benefits: ['Title sponsor', 'Full logo placement', 'Speaking opportunity', '5 VIP tickets', 'Full-page advert'] },
					{ tier: 'Gold', price: 'GHS 100,000', color: 'from-yellow-500 to-yellow-700', benefits: ['Prominent logo', '3 VIP tickets', 'Half-page advert', 'Media mentions', 'Product display'] },
					{ tier: 'Silver', price: 'GHS 50,000', color: 'from-gray-300 to-gray-500', benefits: ['Logo on banners', '2 VIP tickets', 'Quarter-page advert', 'Social media recognition'] },
					{ tier: 'Bronze', price: 'GHS 25,000', color: 'from-amber-600 to-amber-800', benefits: ['Logo listing', '1 VIP ticket', 'Event acknowledgment', 'Branded materials'] }
				].map((tier) => (
					<div class="tier-card glass p-8 rounded-2xl hover:scale-105 transition-all duration-300 border-2 border-[#F8B92F]/30 hover:border-[#F8B92F]">
						<div class={`inline-block px-4 py-2 bg-gradient-to-r ${tier.color} text-white font-bold rounded-full text-sm mb-4`}>
							{tier.tier}
						</div>
						<div class="text-4xl font-bold gradient-text mb-6">{tier.price}</div>
						<ul class="space-y-3 mb-8">
							{tier.benefits.map((benefit) => (
								<li class="flex items-start text-white/80">
									<svg class="w-5 h-5 text-[#F8B92F] mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
									</svg>
									<span>{benefit}</span>
								</li>
							))}
						</ul>
						<a href="#contact" class="block w-full text-center px-6 py-3 bg-gradient-to-r from-[#F8B92F] to-[#FFD700] text-black font-semibold rounded-full hover:shadow-xl transition-all">
							Contact Us
						</a>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Contact Section -->
	<section id="contact" class="relative py-24 animated-gradient grid-pattern">
		<div class="container mx-auto px-6">
			<div class="text-center mb-16">
				<span class="text-[#F8B92F] uppercase tracking-wider text-sm font-semibold">Get In Touch</span>
				<h2 class="text-5xl font-bold text-white mt-4 mb-6">Contact Us</h2>
				<p class="text-white/70 text-lg max-w-3xl mx-auto">
					We'd love to hear from you. Reach out about the pageant, sponsorship, or how to get involved.
				</p>
			</div>
			<div class="max-w-4xl mx-auto grid lg:grid-cols-2 gap-12">
				<div class="space-y-6">
					{[
						{ icon: 'ðŸ‘¤', title: 'Yvonne Kofigah', subtitle: 'General Manager' },
						{ icon: 'ðŸ“ž', title: 'Phone', subtitle: '+233 591942227\n+233 256123084' },
						{ icon: 'âœ‰ï¸', title: 'Email', subtitle: 'info@missdiasporagh.org' },
						{ icon: 'ðŸŒ', title: 'Website', subtitle: 'www.missdiasporagh.org' }
					].map((contact) => (
						<div class="glass p-6 rounded-2xl flex items-start space-x-4">
							<div class="text-4xl">{contact.icon}</div>
							<div>
								<h4 class="text-white font-bold text-lg mb-1">{contact.title}</h4>
								<p class="text-white/70 whitespace-pre-line">{contact.subtitle}</p>
							</div>
						</div>
					))}
				</div>
				<div class="glass p-8 rounded-2xl">
					<form class="space-y-4">
						<input type="text" placeholder="Your Name" class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:border-[#F8B92F]" />
						<input type="email" placeholder="Your Email" class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:border-[#F8B92F]" />
						<select class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white focus:outline-none focus:border-[#F8B92F]">
							<option value="">Select Subject</option>
							<option>Sponsorship Inquiry</option>
							<option>Pageant Application</option>
							<option>General Inquiry</option>
							<option>Media Inquiry</option>
						</select>
						<textarea rows="4" placeholder="Your Message" class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:border-[#F8B92F]"></textarea>
						<button type="submit" class="w-full px-6 py-4 bg-gradient-to-r from-[#F8B92F] to-[#FFD700] text-black font-bold rounded-lg hover:shadow-2xl transition-all">
							Send Message
						</button>
					</form>
				</div>
			</div>
		</div>
	</section>

	<!-- Footer -->
	<footer class="relative py-12 bg-black border-t border-white/10">
		<div class="container mx-auto px-6">
			<div class="flex flex-col items-center space-y-6">
				<img src="/assets/images/logos/mdgh main logo mini.png" alt="MDGH" class="h-16 opacity-80" />
				<p class="text-white/60 text-center">
					Â© 2025 Miss Diaspora Ghana (MDGH). All rights reserved.<br />
					An initiative of Nubian Crown Company Limited.
				</p>
				<div class="flex space-x-8">
					<a href="#home" class="text-white/60 hover:text-[#F8B92F] transition-colors">Home</a>
					<a href="#about" class="text-white/60 hover:text-[#F8B92F] transition-colors">About</a>
					<a href="#sponsorship" class="text-white/60 hover:text-[#F8B92F] transition-colors">Sponsorship</a>
					<a href="#contact" class="text-white/60 hover:text-[#F8B92F] transition-colors">Contact</a>
				</div>
			</div>
		</div>
	</footer>

	<Chatbot />
</Layout>

<script>
	import { gsap } from 'gsap';
	import { ScrollTrigger } from 'gsap/ScrollTrigger';

	gsap.registerPlugin(ScrollTrigger);

	// Animate sections on scroll
	gsap.utils.toArray('.pillar-card, .objective-card, .program-card, .tier-card').forEach((card: any) => {
		gsap.from(card, {
			scrollTrigger: {
				trigger: card,
				start: 'top bottom-=100',
				toggleActions: 'play none none reverse'
			},
			y: 50,
			opacity: 0,
			duration: 0.8,
			ease: 'power3.out'
		});
	});

	// Animate about section
	gsap.from('.about-image', {
		scrollTrigger: {
			trigger: '.about-image',
			start: 'top center+=100'
		},
		x: -100,
		opacity: 0,
		duration: 1,
		ease: 'power3.out'
	});
</script>
